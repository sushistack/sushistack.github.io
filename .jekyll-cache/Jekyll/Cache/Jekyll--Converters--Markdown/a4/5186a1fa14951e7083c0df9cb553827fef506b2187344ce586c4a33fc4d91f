  <span class="nc">List</span><span class="o">&lt;</span><span class="nc">Deposit</span><span class="o">&gt;</span> <span class="n">deposits</span> <span class="o">=</span> <span class="k">new</span> <span class="nc">ArrayList</span><span class="o">&lt;&gt;();</span>
  
